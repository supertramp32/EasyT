<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">
    <EditText
        android:id="@+id/email_subscribe"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:gravity="start"
        android:hint="@string/email"
        android:textColorHint="@color/colorDarkGray"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:background="@drawable/oval_background_button"
        android:drawableTint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:text="@string/label_button_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/email_subscribe"
        app:layout_constraintBottom_toBottomOf="@id/email_subscribe"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

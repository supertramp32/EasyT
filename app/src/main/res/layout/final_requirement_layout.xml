<!--            app:layout_constraintTop_toTopOf="@+id/servicePaymentType"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/servicePaymentType"-->
<!--            />-->



        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:id="@+id/finalViewOne"
            android:background="@color/colorGray"
            app:layout_constraintLeft_toRightOf="@id/verticalGuideline"
            app:layout_constraintTop_toBottomOf="@id/finalView"
            app:layout_constraintBottom_toBottomOf="parent"
            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/promoCodeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="@string/promo"
            android:layout_marginRight="@dimen/mediumMargin"
            android:background="@drawable/rectangular_edit_text"
            app:layout_constraintLeft_toRightOf="@+id/verticalGuideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalViewOne"
            app:layout_constraintBottom_toBottomOf="@+id/servicePaymentType"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPromoCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_gravity="center"
                android:focusable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>




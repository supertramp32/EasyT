<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/topCardList"
    android:elevation="@dimen/cardRadius"
    android:padding="@dimen/smallMargin"
    android:layout_marginTop="@dimen/cardRadius"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/activeRideDate"
       tools:text = "2010/01/12"
       android:textSize="@dimen/heading3"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:layout_margin="@dimen/mediumMargin"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activeRidePickLocation"
        tools:text="Baneswor"
        android:textSize="@dimen/heading3"
        android:drawablePadding="@dimen/mediumMargin"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_pick_loc"
        android:layout_margin="@dimen/mediumMargin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeRideDate"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activeRideDropLocation"
        tools:text="Koteswor"
        android:textSize="@dimen/heading3"
        android:drawablePadding="@dimen/mediumMargin"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_drop_loc"
        android:layout_margin="@dimen/mediumMargin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeRidePickLocation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activeRidePaymentType"
        tools:text="Cash"
        android:textSize="@dimen/heading3"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:drawablePadding="@dimen/mediumMargin"
        android:layout_margin="@dimen/mediumMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activeRideStatus"
        android:textSize="@dimen/heading3"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:drawablePadding="@dimen/mediumMargin"
        android:layout_marginLeft="@dimen/mediumMargin"
        android:layout_marginTop="@dimen/mediumMargin"
        android:layout_marginBottom="@dimen/smallMargin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeRideDropLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activeRidePaymentAmount"
        tools:text="Rs 100"
        android:textSize="@dimen/heading3"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:drawablePadding="@dimen/mediumMargin"
        android:layout_marginRight="@dimen/mediumMargin"
        android:layout_marginTop="@dimen/mediumMargin"
        android:layout_marginBottom="@dimen/smallMargin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeRideDropLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
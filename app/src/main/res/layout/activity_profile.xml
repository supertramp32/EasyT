<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/profileTopView"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileBackBtn"
        android:src="@drawable/ic_back_arrow"
        android:layout_margin="@dimen/normalMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileSaveBtn"
        android:src="@drawable/ic_save"
        android:layout_margin="@dimen/normalMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profileUserImage"
        android:src="@drawable/user"
        android:layout_marginTop="50dp"
        android:elevation="@dimen/normalMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/profileTopCardView"
        app:cardCornerRadius="@dimen/cardRadius"
        android:elevation="@dimen/cardRadius"
        android:layout_marginLeft="@dimen/mediumMargin"
        android:layout_marginRight="@dimen/mediumMargin"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumMargin"
            >



            <EditText
                style="@style/ProfileEditText"
                android:id="@+id/profileUserName"
                android:layout_marginTop="60dp"
                tools:text="Ashik Subedi"
                android:textSize="@dimen/heading1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/colorDarkFont"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/profileViewOne"
                android:background="@color/colorGray"
                android:layout_marginTop="@dimen/mediumMargin"
                app:layout_constraintTop_toBottomOf="@+id/profileUserName"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileUserRides"
                tools:text="25"
                android:textSize="@dimen/heading2"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/mediumMargin"
                android:textColor="@color/colorDarkFont"
                app:layout_constraintTop_toBottomOf="@id/profileViewOne"
                app:layout_constraintLeft_toLeftOf="@id/profileViewOne"
                app:layout_constraintRight_toLeftOf="@+id/vGuide"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileRidesText"
                android:text="@string/total_rides"
                android:textSize="@dimen/heading2"
                android:textColor="@color/colorDarkFont"
                app:layout_constraintTop_toBottomOf="@id/profileUserYears"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/vGuide"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileUserYears"
                tools:text="5"
                android:textSize="@dimen/heading2"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/mediumMargin"
                android:textColor="@color/colorDarkFont"
                app:layout_constraintTop_toBottomOf="@id/profileViewOne"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/vGuide"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileUserYearsText"
                android:text="@string/wallet_balance"
                android:textSize="@dimen/heading2"
                android:textColor="@color/colorDarkFont"
                app:layout_constraintTop_toBottomOf="@id/profileUserYears"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/vGuide"
                />




            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:id="@+id/profileViewtwo"
                android:background="@color/colorGray"
                android:layout_marginTop="@dimen/mediumMargin"
                app:layout_constraintTop_toBottomOf="@+id/profileViewOne"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/vGuide"
                />



            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                android:id="@+id/vGuide"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilePersonalInfoText"
        android:layout_margin="@dimen/normalMargin"
        android:text="@string/personal_information"
        android:textSize="@dimen/heading2"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkFont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTopCardView"
        />



    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/profilePersonalCardView"
        app:cardCornerRadius="@dimen/cardRadius"
        android:elevation="@dimen/cardRadius"
        android:layout_marginTop="@dimen/mediumMargin"
        app:layout_constraintTop_toBottomOf="@+id/profilePersonalInfoText"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumMargin"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_edit_text"
                android:id="@+id/profileUserPhone"
                android:drawableLeft="@drawable/ic_phone"
                android:textColor="@color/colorDarkFont"
                android:drawablePadding="@dimen/mediumMargin"
                android:textSize="@dimen/heading2"
                android:padding="@dimen/mediumMargin"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/profileViewThree"
                android:background="@color/colorGray"
                android:layout_marginTop="@dimen/smallMargin"
                app:layout_constraintTop_toBottomOf="@+id/profileUserPhone"
                />


            <EditText
                style="@style/ProfileEditText"
                android:id="@+id/profileUserEmail"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/mediumMargin"
                android:layout_marginTop="@dimen/smallMargin"
                app:layout_constraintTop_toBottomOf="@id/profileViewThree"
                />


            <View

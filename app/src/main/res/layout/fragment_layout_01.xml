<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboarding_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/onboardingImage"
        app:layout_constraintTop_toBottomOf="@id/hGuideOne"
        app:layout_constraintBottom_toTopOf="@id/hGuideTwo"
        app:layout_constraintLeft_toRightOf="@id/vGuide1"
        app:layout_constraintRight_toLeftOf="@id/vGuide2"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onBoardingHeading"
        android:textStyle="bold"
        android:textSize="@dimen/headingT"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:text="@string/select_pick_up"
        android:layout_marginTop="@dimen/smallMargin"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/hGuideTwo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onBoardingSubHeading"
        android:textStyle="bold"
        android:textSize="@dimen/heading2"
        android:textAlignment="center"
        android:text="@string/select_pick_up_desc"
        android:layout_marginTop="@dimen/smallMargin"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/onBoardingHeading"
        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hGuideOne"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hGuideTwo"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuide1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuide2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />



</androidx.constraintlayout.widget.ConstraintLayout>